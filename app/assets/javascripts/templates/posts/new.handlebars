<div class="container">
  <button {{action savePost}} class="btn btn-success">Save Post</button>
  {{#link-to-animated 'posts' animations="application:slideUp" class="btn btn-primary pull-right"}}Back{{/link-to-animated}}
  <h1>New post!</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="post[title]">Title:</label>
        {{input value=title class='form-control' name='post[title]'}}
      </div>
      <div class="form-group">
        <label for="post[body]">Body:</label>
        {{textarea value=body class='form-control' name='post[body]'}}
      </div>
    </div>
    <div class="col-md-6">
      <h2>{{title}}</h2>
      <p>
        {{body}}
      </p>
    </div>
  </div>
</div>


